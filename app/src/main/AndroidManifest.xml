<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.proyectodam">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logoapp_final_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logoapp_final_foreground"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProyectoDAM">
        <activity
            android:name="com.dsbelda.proyectodam.activities.MainActivity"
            android:exported="false" />
        <activity
            android:name="com.dsbelda.proyectodam.activities.RegisterActivity"
            android:exported="false" />
        <activity
            android:name="com.dsbelda.proyectodam.activities.AddMedicinaActivity"
            android:exported="false" />
        <activity
            android:name="com.dsbelda.proyectodam.activities.MedicinaDetalleActivity"
            android:exported="false" />
        <activity
            android:name="com.dsbelda.proyectodam.activities.InfoActivity"
            android:exported="false" />
        <activity
            android:name="com.dsbelda.proyectodam.activities.AuthActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.dsbelda.proyectodam.services.MedicacionService"
            android:enabled="true"
            android:exported="false"
            android:process=":MedicacionServiceProcess" />

        <receiver
            android:name="com.dsbelda.proyectodam.services.AlarmReceiver"
            android:enabled="true"
            android:label="AlarmReceiver" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>